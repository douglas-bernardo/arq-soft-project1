<?php
namespace Library\Log;

class LoggerTXT extends Logger
{
    public function write($message)
    {
        date_default_timezone_set('America/Sao_Paulo');
        $time = date("Y-m-d H:i:s");

        $text = "[log: $time]\n$message\n";

        $handler = fopen($this->filename, 'a+');
        fwrite($handler, $text);
        fclose($handler);
    }
}
